{
    "manifest_version": 2,

    "name": "Chrome Watcher",
    "description": "This extension keeps track of how much time you spend on websites",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "What's my time?",
        "default_popup": "popup.html"
    },

    "icons": {
        "48": "icon48.png"
    },

    "permissions": [
        "tabs"
    ]
}
